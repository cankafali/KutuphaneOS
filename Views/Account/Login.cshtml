@{
    Layout = null;
    ViewBag.Title = "Giriş | LibraryOS";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport" />
    <title>@ViewBag.Title</title>

    <!-- Otika / Bootstrap CSS -->
    <link rel="stylesheet" href='@Url.Content("~/Content/otika-bootstrap-admin-template/assets/css/app.min.css")' />
    <link rel="stylesheet" href='@Url.Content("~/Content/otika-bootstrap-admin-template/assets/css/style.css")' />
    <link rel="stylesheet" href='@Url.Content("~/Content/otika-bootstrap-admin-template/assets/css/components.css")' />
    <link rel="stylesheet" href='@Url.Content("~/Content/otika-bootstrap-admin-template/assets/css/custom.css")' />
    <link rel='shortcut icon' type='image/x-icon' href='@Url.Content("~/Content/otika-bootstrap-admin-template/assets/img/favicon.ico")' />

    <style>
        :root {
            --lib-primary: #3f51b5; /* indigo */
            --lib-accent: #536dfe;
            --muted: #6b7280;
        }

        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #eef2ff, #f5f7ff);
        }

        .auth-wrap {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 32px 16px;
        }

        .auth-card {
            border: 0;
            border-radius: 18px;
            box-shadow: 0 20px 50px rgba(63,81,181,.15);
            overflow: hidden;
            max-width: 980px;
            width: 100%;
            background: #fff;
        }

        /* ========= SOL PANEL ========= */
        .auth-left {
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 48px 40px;
            background: radial-gradient(1200px 600px at -10% -10%, rgba(83,109,254,.25), transparent 60%), radial-gradient(1200px 600px at 110% 110%, rgba(63,81,181,.25), transparent 60%), linear-gradient(160deg, var(--lib-primary), var(--lib-accent));
            color: #fff;
            text-align: left;
        }

        .brand {
            max-width: 420px;
            margin: 0 auto 18px auto;
        }

            .brand .logo {
                height: 80px;
                width: 80px;
                border-radius: 50%;
                display: block;
                margin: 0 0 14px 0;
                filter: drop-shadow(0 8px 18px rgba(0,0,0,.2));
            }

            .brand .title {
                font-weight: 800;
                letter-spacing: .5px;
                font-size: 46px;
                line-height: 1.05;
                margin: 0 0 10px 0;
            }

            .brand .subtitle {
                opacity: .95;
                margin: 0;
                font-size: 15px;
            }

        .features {
            max-width: 420px;
            margin: 18px auto 0 auto;
            padding: 0;
            list-style: none;
        }

            .features li {
                display: flex;
                align-items: center;
                gap: 10px;
                margin: 10px 0;
                font-size: 14px;
            }

        .feature-ico {
            width: 22px;
            height: 22px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            opacity: .95;
        }

        /* ========= SAĞ PANEL ========= */
        .auth-right {
            padding: 40px 32px;
            display: flex;
            align-items: center;
        }

            .auth-right .inner {
                width: 100%;
                max-width: 420px;
                margin: 0 auto;
            }

            .auth-right .header {
                margin-bottom: 18px;
            }

                .auth-right .header h4 {
                    margin: 0 0 4px 0;
                }

        .small-text {
            color: var(--muted);
        }

        .input-group-text {
            background: #f8f9ff;
            border-color: #e3e6f0;
        }

        .form-control {
            border-color: #e3e6f0;
            height: 46px;
        }

        .btn-lib {
            background: var(--lib-primary);
            border-color: var(--lib-primary);
        }

            .btn-lib:hover {
                background: #2f3fa6;
                border-color: #2f3fa6;
            }

        .actions-row {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        /* Razor ile çakışmaması için @@ */
        @@media (max-width: 991.98px) {
            .auth-left {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="auth-wrap">
        <div class="card auth-card">
            <div class="row no-gutters">
                <!-- SOL: MARKA / VURGU -->
                <div class="col-lg-6 auth-left">
                    <div class="brand">
                        <img class="logo" src='@Url.Content("~/Content/otika-bootstrap-admin-template/assets/img/FİNAL.png")' alt="LibraryOS">
                        <h1 class="title">LibraryOS</h1>
                        <p class="subtitle">Kütüphane yönetimini hızlı, akıllı ve keyifli hale getir.</p>

                        <ul class="features">
                            <li><span class="feature-ico"><i data-feather="book-open"></i></span> Zengin kitap kataloğu ve hızlı arama</li>
                            <li><span class="feature-ico"><i data-feather="repeat"></i></span> Ödünç &amp; iade takibi, gecikme uyarıları</li>
                            <li><span class="feature-ico"><i data-feather="bar-chart-2"></i></span> Yönetici panelinde gerçek zamanlı özetler</li>
                        </ul>
                    </div>
                </div>

                <!-- SAĞ: GİRİŞ FORMU -->
                <div class="col-lg-6 auth-right">
                    <div class="inner">
                        <div class="header">
                            <h4>Hesabına giriş yap</h4>
                            <div class="small-text">Devam etmek için e-posta ve şifreni gir.</div>
                        </div>

                        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                        {
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-2" })

                        <div class="form-group">
                            <label for="email">E-posta</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i data-feather="mail"></i></div>
                                </div>
                                @Html.TextBox("email", null, new
                                {
                                    @class = "form-control",
                                    type = "email",
                                    placeholder = "ornek@site.com",
                                    required = "required",
                                    autofocus = "autofocus",
                                    id = "email"
                                })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password">Şifre</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i data-feather="lock"></i></div>
                                </div>
                                @Html.Password("password", null, new
                                {
                                    @class = "form-control",
                                    placeholder = "••••••••",
                                    required = "required",
                                    id = "password"
                                })
                            </div>
                        </div>

                        <div class="form-group actions-row">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="rememberDummy" />
                                <label class="custom-control-label" for="rememberDummy">Beni hatırla</label>
                            </div>
                            <a href="#" class="small">Şifremi unuttum</a>
                        </div>

                        <button type="submit" class="btn btn-lib btn-lg btn-block">Giriş Yap</button>
                        }

                        <div class="text-center mt-4 small-text">
                            Destek mi lazım? <a href="#" class="font-weight-bold">İletişim</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Otika / Script -->
    <script src='@Url.Content("~/Content/otika-bootstrap-admin-template/assets/js/app.min.js")'></script>
    <script src='@Url.Content("~/Content/otika-bootstrap-admin-template/assets/js/scripts.js")'></script>
    <script src='@Url.Content("~/Content/otika-bootstrap-admin-template/assets/js/custom.js")'></script>
    <script>
        if (window.feather) { feather.replace(); }
        // basit HTML5 validation
        (function () {
            var forms = document.getElementsByClassName('needs-validation');
            Array.prototype.forEach.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) { event.preventDefault(); event.stopPropagation(); }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
</body>
</html>