@model KutuphaneMvc.Models.Entity.UYE
@{
    ViewBag.Title = "Profilim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Profilim</h2>

<div class="card">
    <div class="card-body">

        <p><b>Adı:</b> @Model.AD</p>
        <p><b>Soy Adı:</b> @Model.SOYAD</p>
        <p><b>Email:</b> @Model.EMAIL</p>
        <p><b>Telefon:</b> @Model.TELEFON</p>
    </div>
</div>

<a href="@Url.Action("ProfilDuzenle","Uye")" class="btn btn-primary">Bilgilerimi Düzenle</a>