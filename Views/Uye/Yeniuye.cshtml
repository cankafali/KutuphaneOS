@model KutuphaneMvc.Models.Entity.UYE
@{
    ViewBag.Title = "Yeni Üye";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header"><h4>Yeni Üye Formu</h4></div>
            <div class="card-body">

                @using (Html.BeginForm("YeniUye", "Uye", FormMethod.Post))
                {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(x => x.UYE_ID)

                <div class="form-group">
                    <label>Ad</label>
                    @Html.TextBoxFor(x => x.AD, new { @class = "form-control", placeholder = "Ad" })
                    @Html.ValidationMessageFor(x => x.AD, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Soyad</label>
                    @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control", placeholder = "Soyad" })
                    @Html.ValidationMessageFor(x => x.SOYAD, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(x => x.EMAIL, new { @class = "form-control", type = "email", placeholder = "mail@ornek.com" })
                    @Html.ValidationMessageFor(x => x.EMAIL, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Telefon</label>
                    @Html.TextBoxFor(x => x.TELEFON, new { @class = "form-control", placeholder = "05xxxxxxxxx" })
                    @Html.ValidationMessageFor(x => x.TELEFON, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Yetki</label>
                    @Html.DropDownListFor(x => x.ROLE_ID,
                        ViewBag.Yetkiler as List<SelectListItem>,
                        "Yetki Seçin",
                        new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ROLE_ID, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Üyelik Tarihi</label>
                    @Html.TextBoxFor(x => x.UYELIK_TARIHI, "{0:yyyy-MM-dd}",
                        new { @class = "form-control", type = "date" })
                </div>

                <div class="form-group">
                    <label>Ceza Puanı</label>
                    @Html.TextBoxFor(x => x.CEZA_PUAN, new { @class = "form-control", type = "number", min = "0" })
                </div>
                <div class="form-group">
                    <label>Şifre</label>
                    @Html.PasswordFor(x => x.PAROLA_HASH, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(x => x.PAROLA_HASH, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-outline-primary">Kaydet</button>

                }
            </div>
        </div>
    </div>
</div>